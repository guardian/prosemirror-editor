    "@vitejs/plugin-react": "4.0.4",
    "eslint": "7",
    "jest": "29.6.4",
    "jest-environment-jsdom": "29.7.0",
    "preact": "10.17.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "ts-jest": "29.0.3",
    "tslib": "1.9.3",
    "tslint": "5.10",
    "tslint-config-prettier": "1.17.0",
    "typescript": "4.7.4",
    "vite": "4.5.2"
  },
  "peerDependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  }
