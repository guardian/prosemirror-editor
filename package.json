{
  "name": "prosemirror-editor",
  "version": "0.1.0",
  "description": "Providing implementations of ProseMirror for use in our tools.",
  "main": "dist/cjs/index.js",
  "type": "module",
  "types": "dist/declaration/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": "github:guardian/prosemirror-editor.git",
  "scripts": {
    "watch": "run-p watch:*",
    "build": "vite build && tsc -p tsconfig.declaration.json",
    "test": "jest --env=jsdom --runInBand",
    "test:watch": "jest --env=jsdom --watch --runInBand",
    "format": "prettier --write './src/**/*.ts'",
    "yalc": "npm run build && yalc push"
  },
  "dependencies": {
    "@emotion/core": "^11.0.0",
    "@emotion/react": "^11.1.5",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "@vitejs/plugin-react": "^4.0.4",
    "jest": "^29.6.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^29.0.3",
    "tslib": "^1.9.3",
    "tslint": "5.10",
    "tslint-config-prettier": "^1.17.0",
    "typedoc": "^0.23.14",
    "typedoc-plugin-markdown": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "^4.4.9"
  }
}
