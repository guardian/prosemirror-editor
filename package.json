    "prosemirror-menu": "^1.2.1",
    "prosemirror-model": "^1.19.0",
    "prosemirror-schema-basic": "^1.2.1",
    "prosemirror-schema-list": "^1.2.2",
    "prosemirror-state": "^1.4.2",
    "prosemirror-view": "^1.30.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.5.1",
