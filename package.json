    "@typescript-eslint/parser": "^4.22.1",
    "@vitejs/plugin-react": "^4.0.4",
    "eslint": "7",
    "eslint-plugin-storybook": "^0.6.15",
    "jest": "^29.6.4",
    "preact": "^10.17.1",
    "storybook": "^7.5.1",
    "ts-jest": "^29.0.3",
    "tslib": "^1.9.3",
    "tslint": "5.10",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^4.7.4",
    "vite": "^4.4.9"
